<view class="pop-error" wx:if="{{errorMsg}}">{{errorMsg}}</view>
<view class="page">
  <view class="page__bd">
    <!-- 寄件人面板 -->
    <view class="weui-panel" style='margin-top: 10px;'>
      <view class="weui-panel__bd">
        <view class="weui-media-box weui-media-box_small-appmsg">
          <view class="weui-cells weui-cells_in-small-appmsg">
            <view class="weui-cell weui-cell_access">
              <view class="weui-cell__hd" style='display: flex;'>
                <image src="/images/reciever.png" class="min-image" />
              </view>
              <view class="weui-cell__bd">
                <text>寄件人信息</text>
              </view>
            </view>
            <!-- 选择寄件人 -->
            <view class="weui-form-preview__bd" wx:if="{{showDefaultAddress == 0}}">
              <view class="weui-form-preview__item">
                <view class="new-preview__label__item">寄件人</view>
                <view class="new-preview__value">{{sender.name}}</view>
              </view>
              <view class="weui-form-preview__item">
                <view class="new-preview__label__item">手机号</view>
                <view class="new-preview__value">{{sender.mobile}}</view>
              </view>
              <view class="weui-form-preview__item">
                <view class="new-preview__label__item">公司名称</view>
                <view class="new-preview__value">{{sender.company}}</view>
              </view>
              <view class="weui-form-preview__item">
                <view class="new-preview__label__item">发货省市区</view>
                <view class="new-preview__value">{{sender.province}} {{sender.city}} {{sender.region}}</view>
              </view>
              <view class="weui-form-preview__item">
                <view class="new-preview__label__item">详细地址</view>
                <view class="new-preview__value">{{sender.address}}</view>
              </view>
            </view>
            <!-- /选择寄件人 -->
            <!-- 默认寄件人 -->
