<!-- 错误提示 -->
<view class="pop-error" wx:if="{{errorMsg}}">{{errorMsg}}</view>

<view class="page">
  <view class="page__bd">
    <!-- 寄件人面板 -->
    <view class="weui-panel" style='margin-top: 10px;'>
      <view class="weui-panel__bd">
        <view class="weui-media-box weui-media-box_small-appmsg">
          <view class="weui-cells weui-cells_in-small-appmsg" style='font-size: 30rpx'>
            <!-- 选择寄件人 -->
            <navigator url="/pages/delivery/sender/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
              <view class="weui-cell__hd" style='display: flex; font-size: 30rpx'>
                <image src="/images/send.png" class="min-image" />
              </view>
              <view class="weui-cell__bd">
                <text>寄件信息</text>
              </view>
              <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
            <!-- /选择寄件人 -->
            <!-- 默认寄件人 -->
            <view wx:if="{{sender}}">
              <view class="weui-form-preview">
                <view class="weui-form-preview__bd">
                  <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">{{sender.name}}</view>
                    <view class="new-preview__value">{{sender.mobile}}</view>
                  </view>
                  <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">{{sender.province}} {{sender.city}} {{sender.region}}</view>
                    <view class="new-preview__value" style='color: #ff8000; font-size: 1em;' bindtap='navigateToSenders'>选择</view>
                  </view>
                  <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">{{sender.address}}</view>
                  </view>
                </view>
              </view>
            </view>
            <view wx:else class="weui-cell">
              <view class="weui-cell__bd">
                <text>还未设置寄件人信息</text>
              </view>
              <view class="weui-cell__ft" style='color: #ff8000' bindtap='navigateToSender'>
                <text>去设置</text>
              </view>
            </view>
            <!-- /默认寄件人 -->
          </view>
        </view>
      </view>
    </view>
    <!-- /寄件人面板 -->

    <!-- 收件人面板 -->
    <view class="weui-panel">
      <view class="weui-panel__bd">
        <view class="weui-media-box weui-media-box_small-appmsg">
          <view class="weui-cells weui-cells_in-small-appmsg" style='font-size: 30rpx'>
            <view class="weui-cell weui-cell_access">
              <view class="weui-cell__hd" style='display: flex; font-size: 30rpx'>
                <image src="/images/reciever.png" class="min-image" />
              </view>
              <view class="weui-cell__bd">
                <text>收件信息</text>
              </view>
            </view>
            <input class="weui-cell" bindinput="bindNameInput" value="{{reciever.name}}" placeholder="收件人姓名" />
            <input class="weui-cell" bindinput="bindMobileInput" type="number" value="{{reciever.mobile}}" placeholder="手机号/固定号码" />
            <input class="weui-cell" bindinput="bindCompanyInput" value="{{reciever.company}}" placeholder="收件人公司（选填）" />
            <view class="weui-cell">
              <view class="weui-cell__bd">
                <picker mode="region" bindchange="bindRegionChange">
                  <view class="picker">
                    <view class="weui-input">{{reciever.province}} {{reciever.city}} {{reciever.region}}</view>
                  </view>
                </picker>
              </view>
              <view class="weui-cell__ft">
                <image src="/images/location.png" class="location" bindtap="bingAddressTap" />
              </view>
            </view>
            <input class="weui-cell" bindinput="bindAddressInput" placeholder="详细地址（街道门牌号）" value="{{reciever.address}}" />
          </view>
        </view>
      </view>
    </view>
    <!-- /收件人面板 -->

    <!-- 货物面板 -->
    <view class="weui-panel">
      <view class="weui-panel__bd">
        <view class="weui-media-box weui-media-box_small-appmsg">
          <view class="weui-cells weui-cells_in-small-appmsg" style='font-size: 30rpx'>
            <!-- 选择货物类型 -->
            <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap='showModal'>
              <view class="weui-cell__hd" style='display: flex; font-size: 30rpx'>
                <image src="/images/bags.png" class="min-image" />
              </view>
              <view class="weui-cell__bd">
                <text>物品类型</text>
              </view>
              <view class="weui-cell__ft weui-cell__ft_in-access">{{commodity.name}}</view>
            </navigator>
            <!-- /选择货物类型 -->
            <!-- 包裹备注 -->
            <view class='weui-cell'>
              <view class="weui-cell__bd">
                <input class="weui-cell" placeholder="填写包裹备注信息" />
                <!-- <textarea class="weui-textarea" placeholder="填写包裹备注信息" style="height: 3.3em" />
                <view class="weui-textarea-counter">0/50</view> -->
              </view>
            </view>
            <!-- /包裹备注 -->
          </view>
        </view>
      </view>
    </view>
    <!-- /货物面板 -->

    <!-- 快递公司面板 -->

    <!-- /快递公司面板 -->
  </view>
</view>

<!-- 商品选择列表 -->
<view animation="{{animationData}}" class="zhezhao_attr_box" wx:if="{{showModalStatus}}">
  <view class="weui-panel">
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_small-appmsg">
        <view class="weui-cells weui-cells_in-small-appmsg" style='font-size: 30rpx'>
          <view class="weui-cell weui-cell_access">
            <view class="weui-cell__hd" style='display: flex;'>
              <image src="/images/bags.png" class="min-image" />
            </view>
            <view class="weui-cell__bd">
              <text>选择物品类型</text>
            </view>
          </view>
          <view class='weui-cell'>
            <view class="weui-cell__bd">
              <view class="weui-grids" style='border: 0px;'>
                <block wx:for="{{commodityTypes}}" wx:key="*this">
                  <view url="" class="weui-grid" style='border: 0px;' bindtap='selectCommodity' data-name="{{item.name}}" data-value="{{item.value}}">
                    <image class="weui-grid__icon" src="{{item.url}}" />
                    <view class="weui-grid__label">{{item.name}}</view>
                  </view>
                </block>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
<!-- 遮罩 -->
<view class="zhezhao_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
