/* pages/send/index.wxss */
.sendbox{
    border:1rpx solid #e0e0e0;
    margin: 30rpx 30rpx 0 30rpx;
    background-color: #fff;
}

.sendbox .row{
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    border-bottom: 1rpx solid #e0e0e0;
}

.sendbox .row:last-child{
    border-bottom: 0 none;
} 

.sendbox .row .icon-txt{
    margin: 15rpx 15rpx 0 15rpx;
}

.sendbox .row .name{
    width: 80rpx;
    margin-right: 20rpx;
}

.sendbox .row .city{
    width: 60rpx;
    overflow: hidden;
    margin-right: 20rpx;
}

.sendbox .row .address{
    width: 300rpx;
}

.sendbox .row navigator{
    padding-left: 20rpx;
    border-left: 1rpx solid #ccc;
}