.pop-error {
  background: #E64340;
  color: #fff;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  text-align: center;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 3;
  position:fixed;   
}

.location{
    background-color: #fff;
    width: 24px;
    height: 24px; 
    vertical-align: middle;
}

.min-image{
    background-color: #fff;
    width: 16px;
    height: 16px; 
    vertical-align: middle;
    margin-right: 8px;
}

.zhezhao_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.zhezhao_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}